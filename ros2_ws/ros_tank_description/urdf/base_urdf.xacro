<?xml version="1.0"?>
<robot>
    <link name="base_link"></link>
    
    <!-- Link - chassis -->
    <link name="link_chassis">
        <visual>
            <geometry>
                <!-- <box size="0.22 0.14 0.25" /> -->
                <mesh filename="package://ros_tank_description/meshes/tank_body.stl" scale="0.00111 0.00111 0.0011"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 -0.08" rpy="0 0 0"/>
            <geometry>
                <box size="0.25 0.25 0.1" />
            </geometry>
        </collision>

        <inertial>
            <mass value="10"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>
    </link>

    <joint name="base_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0" />
        <parent link="base_link" />
        <child link="link_chassis" />
    </joint>

    <!-- Joint - laser scan -->
    <joint name="joint_laser_scan_chassis" type="fixed">
        <origin rpy="0 0 3.2" xyz="-0.01 0 0.11" />
        <child link="link_laser_scan" />
        <parent link="link_chassis" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - laser scan -->
    <link name="link_laser_scan">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://ros_tank_description/meshes/lidarA1.stl" pose="0 0 0" scale="0.00111 0.00111 0.0011"/>
                <!-- <cylinder radius="0.04" length="0.04"/> -->
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.04" length="0.04"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="0.1"/>
            <origin rpy="0 0 0" xyz="0 0 0.0204"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
    </link>
    
    <!-- Joint - pointcloud -->
    <joint name="pointcloud_link_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.051 0.0 0"/>
        <parent link="link_chassis"/>
        <child link="pointcloud_link"/>
        <axis xyz="0 0 0"/>
    </joint>

    <!-- Link - pointcloud -->
    <link name="pointcloud_link"></link>

    <!-- Joint - left wheel -->
    <joint name="joint_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.1 -0.12"/>
        <child link="left_wheel"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Link - left wheel -->
    <link name="left_wheel">      
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.001" radius="0.015"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.001" radius="0.015"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="1.531666666666667e-05" ixy="0" ixz="0" iyy="1.531666666666667e-05" iyz="0" izz="3.0625000000000006e-05"/>
        </inertial>
    </link>

    <!-- Joint - right wheel -->
    <joint name="joint_right_wheel" type="continuous">  
        <origin rpy="0 0 0" xyz="0 -0.1 -0.12"/>
        <child link="right_wheel"/>
        <parent link="link_chassis"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Link - right wheel -->
    <link name="right_wheel">      
        <visual>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.001" radius="0.015"/>
            </geometry>
        </visual>

        <collision>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
            <cylinder length="0.001" radius="0.015"/>
            </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="1.531666666666667e-05" ixy="0" ixz="0" iyy="1.531666666666667e-05" iyz="0" izz="3.0625000000000006e-05"/>
        </inertial>
    </link>

</robot>